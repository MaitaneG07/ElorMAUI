@page "/"
@using ElorMAUI.ViewModels
@inject NavigationManager Nav
@inject MainViewModel ViewModel


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                <div class="bg-primary p-5 text-center text-white position-relative"
                     style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1523050853064-dbad350c7469?auto=format&fit=crop&w=800&q=80'); background-size: cover; background-position: center;">
                    <h1 class="display-5 fw-bold">🏫 Elorrieta Centros</h1>
                    <p class="lead">Gestión y localización de centros educativos de Euskadi</p>


                </div>

                <div class="card-body p-4">

                    <div class="row text-center mb-4">
                        <div class="col-3">
                            <div class="p-3">
                                <i class="bi bi-search text-primary fs-2"></i>
                                <p class="small fw-bold mt-2">Busca</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="p-3">
                                <i class="bi bi-geo-alt-fill text-danger fs-2"></i>
                                <p class="small fw-bold mt-2">Ubica</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="p-3">
                                <i class="bi bi-cloud-sun-fill text-success fs-2"></i>
                                <p class="small fw-bold mt-2">Clima</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="p-3">
                                <i class="bi bi-info-circle-fill text-info fs-2"></i>
                                <p class="small fw-bold mt-2">Detalle</p>
                            </div>
                        </div>
                    </div>

                    <div class="text-center px-4 mb-4">
                        <p class="text-muted fs-5">
                            Explora la red de centros, filtra por titularidad o territorio y consulta el clima en tiempo real de cada ubicación.
                        </p>
                    </div>
                </div>

                <div class="card-footer bg-light text-center py-3 border-0">
                    <small class="text-muted">ElorMAUI App v1.0 - 2026</small>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void IrAlBuscador()
    {
        Nav.NavigateTo("/buscador");
    }
}